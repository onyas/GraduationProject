        android:text="运行中的时程" />

    <TextView
        android:id="@+id/tv_taskmanager_aviamemory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="可用内存" />

